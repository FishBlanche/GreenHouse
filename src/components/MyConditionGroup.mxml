<?xml version="1.0" encoding="utf-8"?>
 
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%" clipAndEnableScrolling="true"
		>
	
	<fx:Script>
		<![CDATA[
		 
		]]>
	</fx:Script>
	
	<fx:Declarations>
		 
	</fx:Declarations>
	<s:VGroup  gap="0"    id="vg" width="100%" height="100%" horizontalAlign="center" horizontalCenter="0" verticalAlign="middle">
		<s:HGroup horizontalAlign="center" width="100%" height="50%">
			<s:Image   id="myPic"  width="85" height="53" smooth="true"/>
			<s:CheckBox   id="bigCheck" color="green" label="大于" click="bigCheck.selected=true;smallCheck.selected=false;"   fontSize="15" height="100%" width="20%" selected="false"  >
			</s:CheckBox>
			<s:CheckBox    id="smallCheck" color="green" label="小于" click="smallCheck.selected=true;bigCheck.selected=false;" fontSize="15" height="100%" width="20%" selected="false"  >
			</s:CheckBox>
			<mx:HSlider id="mySlider" trackSkin="@Embed('assets/track.png')" thumbSkin="@Embed('assets/thumb.png')"     horizontalCenter="0"  verticalCenter="0"     height="100%"      width="40%"      
						    dataTipOffset="6"   dataTipPlacement="top"   tickColor="#1d953f" labelStyleName="sliderLabel" snapInterval="0.5"   allowTrackClick="true" liveDragging="true"/>
			<s:Image   source="assets/delIcon.png"  id="myDel"  width="80" height="48"  smooth="true"/>
		</s:HGroup>
		<s:HGroup horizontalAlign="center" width="60%" height="50%">
			<s:CheckBox     horizontalCenter="0"    id="andCheck" color="green" label="且" click="andCheck.selected=true;orCheck.selected=false;"   fontSize="15" height="100%" width="50%" selected="false"  >
			</s:CheckBox>
			<s:CheckBox     horizontalCenter="0"    id="orCheck" color="green" label="或" click="orCheck.selected=true;andCheck.selected=false;" fontSize="15" height="100%" width="50%" selected="false"  >
			</s:CheckBox>
		</s:HGroup>
		 
	</s:VGroup>	
	 
</s:Group>
 
	 
 
