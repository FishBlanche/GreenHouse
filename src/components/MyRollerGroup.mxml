<?xml version="1.0" encoding="utf-8"?>

<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%" clipAndEnableScrolling="true"
		 >
	
	<fx:Script>
		<![CDATA[
			private	function dataFormat(value:Number):String {
				
				return   "持续" + value+"分钟";
			}    
		]]>
	</fx:Script>
	
	<fx:Declarations>
		
	</fx:Declarations>
	
	<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center" >
		<s:Image id="roller" width="85" height="53" smooth="true"  />
		
		<s:HGroup gap="0"  verticalAlign="middle" horizontalAlign="center" height="100%" width="30%">
			
			<s:ToggleButton  id="rollerOn" color="white" width="33%" selected="false" click="rollerOn.selected = true;rollerOff.selected=false;rollerRet.selected =false; "
							 label="开" skinClass="skins.LeftButtonSkin" />
			<s:ToggleButton  id="rollerRet" color="white" width="33%" selected="false" click="rollerRet.selected = true;rollerOff.selected=false;rollerOn.selected=false;"
							 label="收" skinClass="skins.MiddleButtonSkin" />
			<s:ToggleButton  id="rollerOff" color="white" width="33%" selected="false" click="rollerOff.selected = true;rollerOn.selected=false;rollerRet.selected =false;"
							 label="停" skinClass="skins.RightButtonSkin" />
		</s:HGroup>
		<s:Image id="rtime" source="assets/duration.png" width="80" height="48"  smooth="true"/>
		<mx:HSlider  trackSkin="@Embed('assets/track.png')" thumbSkin="@Embed('assets/thumb.png')"   horizontalCenter="0"  verticalCenter="0"      height="100%"      width="30%"    id="rSlider"  
					 dataTipFormatFunction="dataFormat" 	 showDataTip="true"	 minimum="0" maximum="20" dataTipOffset="6"      dataTipPlacement="top"   tickColor="#1d953f" tickInterval="5"  labelStyleName="sliderLabel"  labels="[0,5,10,15,20]" snapInterval="1"   allowTrackClick="true" liveDragging="true"/>
		<s:Image   source="assets/delIcon.png"   id="myDel"  width="80" height="48"  smooth="true"/>
	</s:HGroup>
	
</s:Group>